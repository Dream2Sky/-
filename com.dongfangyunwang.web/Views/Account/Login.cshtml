
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link href="~/Content/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        html body{
             font-family:'Microsoft YaHei';
        }
        html body a{
            color:#000;
        }
        .div-panel{
            margin:0px,auto;
            height:250px;
            width:300px;
        }
        .page-header{
            margin:0px;
        }
        .header{
            padding-bottom:20px;
        }
        .footer{
            text-align:center;
        }
        .alert-error{
            background-color:#F2DEDE;
            border-width:1px;
            border-radius:3px;
            border-style:solid;
            border-color:#EED3D7;
            color:#B94A48;
        }
        
    </style>
</head>
<body>
    <div class="container-fluid header">
        <div class="page-header">
            <h2><strong>东方云网</strong> <small>数据收集系统</small></h2>
        </div>
    </div>
    <div class="container-fluid div-panel"> 
            @if (!string.IsNullOrEmpty(ViewBag.msg))
            {
                <div class="alert alert-error">
                    <a class="close" data-dismiss="alert">×</a>
                    <strong>登陆失败! </strong>@ViewBag.msg
                </div>
            }
            <form action="/Account/Login" method="post">
                <div class="form-group">
                    <label for="input_account">用户名</label>
                    <input type="text" class="form-control" id="input_account" name="account" placeholder="用户名">
                </div>
                <div class="form-group">
                    <label for="input_password">密码</label>
                    <input type="password" class="form-control" id="input_password" name="password" placeholder="密码">
                </div>
                <div class="form-group">
                    <label class="radio-inline">
                        <input type="radio" name="isadmin" id="inlineRadio1" value="y"> 管理员
                    </label>
                    <label class="radio-inline">
                        <input type="radio" name="isadmin" id="inlineRadio2" value="n"> 普通用户
                    </label>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-default">登陆</button>
                </div>
            </form>
    </div>
    <div class="container-fluid footer">
        <hr />
        <p><a href="#">app.szosi.com</a></p>
    </div>
    <script src="~/Content/js/jquery.min.js"></script>
    <script src="~/Content/js/bootstrap.min.js"></script>
</body>
</html>
