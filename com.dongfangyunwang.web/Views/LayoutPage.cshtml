<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/Content/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/css/bootstrap-datetimepicker.min.css" rel="stylesheet" />
    <script src="~/Content/js/jquery.min.js"></script>
    <script src="~/Content/js/bootstrap.min.js"></script>
    <script src="~/Content/js/bootstrap-datetimepicker.min.js"></script>
    <style>
        html body {
            font-family: 'Microsoft YaHei';
        }

            html body a {
                color: #000;
            }

        .page-header {
            margin: 0px;
        }

        .header {
            padding-bottom: 20px;
        }

        .footer {
            margin-top:100px;
            text-align: center;
        }

        .navbar {
            margin-bottom: 10px;
        }
    </style>
</head>
<body>
    <div class="container-fluid header">
        <div class="page-header">
            <h2><strong>东方云网</strong> <small>数据收集系统</small></h2>
        </div>
    </div>
    <div class="navbar">
        <div class="container">
            <ul class="nav navbar-nav">
                @if (System.Web.HttpContext.Current.Session["admin"] == null)
                {
                    <li class="active">
                        <a href="/Home/Index">首页</a>
                    </li>
                    <li>
                        <a href="/Information/ImportInformationwithSpecificMember">数据</a>
                    </li>
                    <li>
                        <a href="/Account/ResetPassword">账户</a>
                    </li>
                }
                else
                {
                    <li class="active">
                        <a href="/Admin/Index">首页</a>
                    </li>
                    <li>
                        <a href="/Follow/Items">跟进设置</a>
                    </li>
                    <li>
                        <a href="/Member/List">添加新用户</a>
                    </li>
                    <li>
                        <a href="/Information/ImportInformation">数据</a>
                    </li>
                    <li>
                        <a href="/Account/ResetPassword">账户</a>
                    </li>
                }
            </ul>
            <ul class="nav navbar-nav navbar-right">
                <li>
                    <a href="/Account/Logout">退出登录</a>
                </li>
            </ul>
        </div>
    </div>
    <div class="container">
        @RenderBody()
    </div>

    <div class="container-fluid footer">
        <hr />
        <p><a href="#">app.szosi.com</a></p>
    </div>

</body>
</html>
